default_platform(:ios)

platform :ios do
  desc "Build and upload cameraDemo app to TestFlight"
  lane :beta do
    # Use match in readonly mode with your private git repo
    match(
      type: "appstore",
      readonly: true,
      git_url: ENV["MATCH_GIT_URL"],
      git_branch: ENV["MATCH_GIT_BRANCH"],
      app_identifier: "com.dimpho.cameraDemo",
      username: ENV["APPSTORE_TEAM_ID"],
      git_basic_authorization: ENV["CERTS_REPO_PAT"],
      password: ENV["MATCH_PASSWORD"]
    )

    # Build the IPA
    build_app(
      scheme: "Runner",
      export_method: "app-store",
      include_bitcode: true,
      clean: true,
      output_directory: "build/ios/ipa"
    )

    # Upload to TestFlight using .p8 API key
    upload_to_testflight(
      skip_waiting_for_build_processing: true,
      app_identifier: "com.dimpho.cameraDemo",
      api_key: app_store_connect_api_key(
        key_id: ENV["APPSTORE_API_KEY_ID"],
        issuer_id: ENV["APPSTORE_ISSUER_ID"],
        key_content: ENV["APPSTORE_API_PRIVATE_KEY"],
        in_house: false
      )
    )
  end
end
