default_platform(:ios)

platform :ios do
  desc "Build and upload cameraDemo app to TestFlight"
  lane :beta do
    # Fetch certs & provisioning profiles from your private repo
    match(
      type: "appstore",
      readonly: true, # optional, set true if profiles already exist
      git_url: ENV["MATCH_GIT_URL"],
      git_branch: ENV["MATCH_GIT_BRANCH"],
      git_basic_authorization: ENV["CERTS_REPO_PAT"],
      app_identifier: "com.dimpho.cameraDemo",
      api_key: app_store_connect_api_key(
        json_key: ENV["APP_STORE_JSON_KEY"]
      )
    )

    build_app(
      scheme: "Runner",
      export_method: "app-store",
      include_bitcode: true,
      clean: true,
      output_directory: "build/ios/ipa"
    )

    upload_to_testflight(
      skip_waiting_for_build_processing: true,
      app_identifier: "com.dimpho.cameraDemo",
      api_key: app_store_connect_api_key(
        json_key: ENV["APP_STORE_JSON_KEY"]
      )
    )
  end
end
