default_platform(:ios)

platform :ios do
  desc "Build and upload cameraDemo app to TestFlight"
  lane :beta do
    # Fetch certificates & provisioning profiles from your private repo
    match(
      type: "appstore",
      readonly: true,                     # avoids needing Apple ID/password
      git_url: ENV["MATCH_GIT_URL"],      
      git_branch: ENV["MATCH_GIT_BRANCH"],
      app_identifier: "com.dimpho.cameraDemo",
      git_basic_authorization: ENV["CERTS_REPO_PAT"],
      username: ENV["APPSTORE_TEAM_ID"]
    )

    # Build the IPA
    build_app(
      scheme: "Runner",
      export_method: "app-store",
      include_bitcode: true,
      clean: true,
      output_directory: "build/ios/ipa"
    )

    # Upload to TestFlight
    upload_to_testflight(
      skip_waiting_for_build_processing: true,
      app_identifier: "com.dimpho.cameraDemo",
      api_key: app_store_connect_api_key(
        key_id: ENV["APPSTORE_API_KEY_ID"],
        issuer_id: ENV["APPSTORE_ISSUER_ID"],
        key_filepath: "C:/Users/Dimpho/AuthKey_RMURKB947M.p8"
      )
    )
  end
end
