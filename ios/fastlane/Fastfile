require 'json'

default_platform(:ios)

platform :ios do
  desc "Build and upload cameraDemo app to TestFlight"
  lane :beta do
    # Parse JSON key to extract key_id and issuer_id
    json_key = JSON.parse(ENV["APP_STORE_JSON_KEY"])
    api_key = app_store_connect_api_key(
      key_content: ENV["APP_STORE_JSON_KEY"], # full JSON string
      key_id: json_key["key_id"],
      issuer_id: json_key["issuer_id"],
      in_house: false
    )

    # Fetch certificates & provisioning profiles from your private repo
    match(
      type: "appstore",                  # App Store distribution
      readonly: true,                   # Set false to allow creating/updating profiles
      git_url: ENV["MATCH_GIT_URL"],     # Private GitHub certs repo
      git_branch: ENV["MATCH_GIT_BRANCH"],   # e.g., "main"
      app_identifier: "com.dimpho.cameraDemo",
      username: ENV["APPSTORE_TEAM_ID"], # Team ID or Apple ID email (Fastlane uses for context)
      api_key: api_key,
      git_basic_authorization: ENV["CERTS_REPO_PAT"]
    )

    # Build the IPA
    build_app(
      scheme: "Runner",
      export_method: "app-store",
      include_bitcode: true,
      clean: true,
      output_directory: "build/ios/ipa"
    )

    # Upload to TestFlight
    upload_to_testflight(
      skip_waiting_for_build_processing: true,
      app_identifier: "com.dimpho.cameraDemo",
      api_key: api_key
    )
  end
end
